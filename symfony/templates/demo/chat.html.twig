<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Mini Chat Demo</title>
    <style>
      :root { color-scheme: light; }
      body {
        font-family: "IBM Plex Sans", "Segoe UI", sans-serif;
        margin: 0;
        background: linear-gradient(135deg, #f7f4ef 0%, #f0f7ff 100%);
        color: #1d1d1f;
      }
      .wrap {
        max-width: 980px;
        margin: 32px auto;
        padding: 24px;
        display: grid;
        gap: 16px;
        grid-template-columns: 2fr 1fr;
      }
      .card {
        background: #fff;
        border: 1px solid #e6e6e6;
        border-radius: 12px;
        box-shadow: 0 6px 24px rgba(0,0,0,0.06);
        padding: 16px;
      }
      .messages {
        height: 420px;
        overflow: auto;
        padding: 8px;
        border: 1px solid #ececec;
        border-radius: 8px;
        background: #fafafa;
      }
      .msg {
        margin: 8px 0;
        padding: 8px 12px;
        border-radius: 8px;
        background: #fff;
        border: 1px solid #eee;
      }
      .msg .meta {
        font-size: 12px;
        color: #6b6b6b;
      }
      .row {
        display: flex;
        gap: 8px;
      }
      input[type="text"] {
        flex: 1;
        padding: 10px 12px;
        border: 1px solid #dcdcdc;
        border-radius: 8px;
        font-size: 14px;
      }
      button {
        padding: 10px 14px;
        border: none;
        border-radius: 8px;
        background: #1f6feb;
        color: #fff;
        font-weight: 600;
        cursor: pointer;
      }
      button:disabled { opacity: 0.6; cursor: not-allowed; }
      .status { font-size: 12px; color: #555; }
      ul { list-style: none; padding: 0; margin: 0; }
      li { padding: 6px 0; border-bottom: 1px solid #f0f0f0; }
      .note { font-size: 12px; color: #a33; }
    </style>
  </head>
  <body>
    <div class="wrap">
      <div class="card">
        <h2>Chat Demo</h2>
        <div class="status" id="status">connecting...</div>
        <div class="note" id="note"></div>
        <div class="messages" id="messages"></div>
        <div class="row" style="margin-top: 12px;">
          <input id="message" type="text" placeholder="Type a message..." />
          <button id="send">Send</button>
        </div>
      </div>
      <div class="card">
        <h3>Online</h3>
        <ul id="online"></ul>
      </div>
    </div>
    <script>
      const statusEl = document.getElementById('status');
      const noteEl = document.getElementById('note');
      const messagesEl = document.getElementById('messages');
      const onlineEl = document.getElementById('online');
      const sendBtn = document.getElementById('send');
      const msgInput = document.getElementById('message');

      const userId = "{{ user_id|e('js') }}";
      const wsToken = "{{ token|e('js') }}";
      const tokenError = "{{ token_error|e('js') }}";
      const initialUsers = {{ initial_users|json_encode|raw }};

      const onlineUsers = new Set(initialUsers || []);

      function renderUsers() {
        onlineEl.innerHTML = '';
        if (onlineUsers.size === 0) {
          const li = document.createElement('li');
          li.textContent = 'no users yet';
          onlineEl.appendChild(li);
          return;
        }
        Array.from(onlineUsers).sort().forEach(u => {
          const li = document.createElement('li');
          li.textContent = u;
          onlineEl.appendChild(li);
        });
      }

      function appendMessage(payload) {
        const div = document.createElement('div');
        div.className = 'msg';
        const meta = document.createElement('div');
        meta.className = 'meta';
        const when = payload.ts ? new Date(payload.ts * 1000).toLocaleTimeString() : '';
        meta.textContent = `${payload.user || 'anon'} ${when}`;
        const body = document.createElement('div');
        body.textContent = payload.text || '';
        div.appendChild(meta);
        div.appendChild(body);
        messagesEl.appendChild(div);
        messagesEl.scrollTop = messagesEl.scrollHeight;
      }

      function handlePresence(payload) {
        if (!payload || !Array.isArray(payload.users)) return;
        onlineUsers.clear();
        payload.users.forEach(u => onlineUsers.add(u));
        renderUsers();
      }

      function connect() {
        if (tokenError) {
          noteEl.textContent = tokenError;
          statusEl.textContent = 'token error';
          sendBtn.disabled = true;
          return;
        }
        if (!wsToken) {
          noteEl.textContent = 'missing token';
          statusEl.textContent = 'token missing';
          sendBtn.disabled = true;
          return;
        }

        const wsProto = location.protocol === 'https:' ? 'wss' : 'ws';
        const wsUrl = `${wsProto}://${location.host}/ws?token=${encodeURIComponent(wsToken)}`;
        const ws = new WebSocket(wsUrl);
        let heartbeat = null;

        ws.onopen = () => {
          statusEl.textContent = `connected as user:${userId}`;
          heartbeat = setInterval(() => {
            if (ws.readyState === WebSocket.OPEN) {
              ws.send(JSON.stringify({ type: 'heartbeat' }));
            }
          }, 20000);
        };

        ws.onmessage = (ev) => {
          try {
            const msg = JSON.parse(ev.data);
            if (msg.type === 'event' && msg.payload) {
              const payload = msg.payload;
              if (payload.type === 'chat') {
                appendMessage(payload);
              } else if (payload.type === 'presence') {
                handlePresence(payload);
              }
            }
          } catch (e) {
            // ignore
          }
        };

        ws.onclose = () => {
          statusEl.textContent = 'disconnected';
          if (heartbeat) clearInterval(heartbeat);
        };

        ws.onerror = () => {
          statusEl.textContent = 'error';
        };

        sendBtn.onclick = () => {
          const text = msgInput.value.trim();
          if (!text) return;
          msgInput.value = '';
          if (ws.readyState !== WebSocket.OPEN) return;
          ws.send(JSON.stringify({ type: 'chat', text }));
        };
      }

      renderUsers();
      connect();
    </script>
  </body>
</html>
